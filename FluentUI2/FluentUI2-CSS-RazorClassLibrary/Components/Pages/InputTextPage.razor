@page "/inputtext"
<h1>InputText</h1>

<p>
    <a href="https://web-components.fluentui.dev/?path=/docs/components-textinput--docs" target="_blank">See on Web Components v3</a>
</p>
<Showcase >
    <label>
        Input Label
        <InputText  @bind-Value="@text"/>
       
    </label>
</Showcase>
<h2>STORIES</h2>

<h3>Default</h3>
<Showcase >
    <label>
        Input Label
        <InputText @bind-Value="@text" />
    </label>
</Showcase>

<h3>Without Label</h3>
<Showcase >
    <InputText  @bind-Value="@text" />
</Showcase>

<h3>Disabled</h3>
<Showcase >
    <label>
        Disabled Input
        <InputText disabled @bind-Value="@text" />
    </label>
</Showcase>

<h3>Placeholder</h3>
<Showcase >
    <label>
        Input with a placeholder
        <InputText @bind-Value="@textPlaceholder" placeholder="Placeholder text" />
    </label>
</Showcase>

<h3>Read Only</h3>
<Showcase >
    <label>
        Read-only value
        <InputText readonly @bind-Value="@text"  />
    </label>
</Showcase>
<h3>Invalied</h3>
<Showcase >
    <label>
        Blazor (class .invalid)
        <InputText class="invalid" @bind-Value="@textInvalid" />
    </label>
    <label>
        CSS :invalid
        <input required />
    </label>
</Showcase>
<h3>Inline</h3>
<Showcase >

    The quick brown
    <InputText style="display:inline-flex" @bind-Value="@textLine1" placeholder="noun" />
    jumped over the
    <InputText style="display:inline-flex" @bind-Value="@textLine2" placeholder="adjective" />
    dog.
</Showcase>

@code {
    string text;
    string textInvalid;
    string textPlaceholder;
    string textLine1;
    string textLine2;


 
}
